[
  {
    "name": "Build current project with Grunt",
    "dir": "$PROJECT_ROOT",
    "cmd": "grunt",
    "shortcut": "Ctrl-Shift-B"
  },
  {
    "name": "List all Javascript files in the src folder of the current project",
    "dir": "$PROJECT_ROOT/src",
    "cmd": "find . -name '*.js'",
    "shortcut": "Ctrl-Shift-L"
  },
  {
    "name": "List all files in the home directory and hide panel",
    "dir": ".",
    "cmd": "ls",
    "shortcut": "Ctrl-Shift-K",
    "autohide": true
  }
]